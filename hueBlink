#/bin/bash
[[ ! -d ~/.HueControl ]] && echo "Setup not found! Please run: hueConfig" && exit 1
[[ "$1" -eq "" ]] && echo "No ID Provided. Expected: hueBlink <id>" && exit 1
echo "Blinking light $1 15 times"
curl -s -XPUT $(cat ~/.HueControl/address)/api/$(cat ~/.HueControl/username)/lights/$1/state --data '{"alert":"lselect"}' > /dev/null

exit 0
